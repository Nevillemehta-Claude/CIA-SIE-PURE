name: Sync to Backup Repository

on:
  push:
    branches:
      - main
  workflow_dispatch:

jobs:
  sync:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout source repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0
          persist-credentials: false

      - name: Push to backup repository
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "github-actions[bot]@users.noreply.github.com"
          git remote add backup https://x-access-token:${{ secrets.BACKUP_TOKEN }}@github.com/Nevillemehta-Claude/CIA-SIE-PURE-BACKUP.git
          git push backup main --force
