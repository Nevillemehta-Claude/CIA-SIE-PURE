# =============================================================================
# CIA-SIE ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# 
# SECURITY WARNING: Never commit .env to version control!
# =============================================================================

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME=CIA-SIE
APP_VERSION=2.3.0
DEBUG=false
ENVIRONMENT=development

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=sqlite+aiosqlite:///./data/cia_sie.db

# =============================================================================
# API SERVER
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# AI PROVIDER (Claude/Anthropic)
# =============================================================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Model selection
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
AI_FALLBACK_MODEL=claude-3-haiku-20240307

# Budget settings
AI_BUDGET_LIMIT=50.0
AI_BUDGET_ALERT_THRESHOLD=80
AI_RATE_LIMIT_REQUESTS_PER_MINUTE=20
AI_RATE_LIMIT_TOKENS_PER_MINUTE=100000

# =============================================================================
# KITE CONNECT (ZERODHA)
# =============================================================================
# Get your credentials from: https://developers.kite.trade/
#
# SETUP STEPS:
# 1. Go to https://developers.kite.trade/
# 2. Login with your Zerodha account
# 3. Create a new app
# 4. Set redirect URL to: http://127.0.0.1:8000/api/v1/platforms/kite/callback
# 5. Copy API Key and API Secret below
# =============================================================================
KITE_API_KEY=your_kite_api_key_here
KITE_API_SECRET=your_kite_api_secret_here
KITE_REDIRECT_URI=http://127.0.0.1:8000/api/v1/platforms/kite/callback

# =============================================================================
# WEBHOOK (TradingView)
# =============================================================================
# Optional: Set a secret to validate webhook requests
WEBHOOK_SECRET=

# =============================================================================
# FRESHNESS THRESHOLDS (minutes)
# =============================================================================
DEFAULT_CURRENT_THRESHOLD_MIN=2
DEFAULT_RECENT_THRESHOLD_MIN=10
DEFAULT_STALE_THRESHOLD_MIN=30

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/cia_sie.log

# =============================================================================
# CORS (Frontend)
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173
